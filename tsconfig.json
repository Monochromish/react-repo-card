{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "es6",
    "declaration": true,
    // "module": "es5", // Specifies module system
    "outDir": "./dist",
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
